{
  "name": "german-watchdog",
  "version": "1.0.0",
  "description": "Surveillance monitoring system with Discord notifications",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "esbuild src/renderer/renderer.ts --bundle --outfile=dist/renderer/renderer.js --format=iife --platform=browser --target=ES2020",
    "build:watch": "tsc --watch",
    "start": "electron .",
    "dev": "npm run build && npm run start",
    "electron:build": "electron-builder",
    "clean": "rm -rf dist"
  },
  "build": {
    "appId": "com.german.watchdog",
    "productName": "German Watchdog",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "source.mp4",
      "styles.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5"
  },
  "dependencies": {
    "@tensorflow/tfjs-node": "^4.22.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "node-webcam": "^0.8.2",
    "wait-on": "^9.0.3"
  }
}
